<?xml version="1.0"?>

<robot name="robocar"> 

 <material name="gray">
     <color rgba="0.5 0.5 0.5 1"/>
  </material>

 <material name="red">
     <color rgba="1.0 0.0 0.0 1"/>
  </material>


  <link name="base_link"/>

  <joint name="body_joint" type="fixed">
      <parent link="base_link"/>
      <child  link="body_link"/>
      <origin xyz="0 0 0.032" rpy="0 0 0"/>   
  </joint>

  <link name="body_link">
      <visual>
         <origin xyz="0 0 0.023" rpy="0 0 0"/>   
         <geometry>
             <box size="0.17 0.11 0.08"/>
         </geometry>
         <material name="gray" />
       </visual>
     </link>             
  

  <joint name="left_wheel_joint" type="continuous">
       <parent link="body_link"/>
       <child  link="left_wheel_link"/>
        <origin xyz="0 0.068 0.0" rpy="-1.57 0 0"/>  
        <axis xyz="0 0 1" />
  </joint>

  <link name="left_wheel_link">
        <visual>
            <geometry>
                <cylinder length="0.026" radius="0.032" />
             </geometry>
             <material name="red"/>
         </visual>
  </link>
  
 <joint name="right_wheel_joint" type="continuous">
       <parent link="body_link"/>
       <child  link="right_wheel_link"/>
        <origin xyz="0 -0.055 0" rpy="-1.57 0 0"/>
            <axis xyz="0 0 1" />
  </joint>

  <link name="right_wheel_link">
        <visual>
            <geometry>
                <cylinder length="0.026" radius="0.032" />
             </geometry>
             <material name="red"/>
            </visual>
  </link>  
   

  <joint name="front_ball_joint" type="fixed">
      <parent link="body_link"/>
      <child  link="front_ball_link"/>
      <origin xyz="0.08 0 -0.024" rpy="0 0 0"/>
  </joint>

  <link name="front_ball_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0.0"/>
        <geometry>
             <sphere radius="0.007"/>
        </geometry>
        <material name="gray" />
       </visual>
  </link>
  
  <joint name="back_ball_joint" type="fixed">
      <parent link="body_link"/>
      <child  link="back_ball_link"/>
      <origin xyz="-0.08 0 -0.024" rpy="0 0 0"/>
  </joint>

  <link name="back_ball_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
             <sphere radius="0.007" />
        </geometry>
        <material name="gray" />
       </visual>
  </link>  
  

</robot>          
